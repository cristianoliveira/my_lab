    <%= f.select   :tipo, options_for_select(Partida::TIPOS.each_with_index.map { |n, i| [n, i] }) %>
  </div>
  <div class="field">
    <%= f.label    :dia_semana %><br>
    <%= f.select   :dia_semana, options_for_select(Partida::DIAS_SEMANA.each_with_index.map { |n, i| [n,i] }) %>
