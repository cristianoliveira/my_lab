      <ul>
      <% @partida.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label       :descricao %><br>
    <%= f.text_field  :descricao %>
  </div>
