
 <!-- Header -->
    <header id="top" class="header">
        <div class="text-vertical-center">
            <h1>Gerência FC</h1>
            <h3>Divida seu time rápido e fácil.</h3>
            <br>
            <div class="form_login">
                <% if @msg_erro %>
                	<%= @msg_erro %>
                <% end %>

	            <%= form_tag "/usuarios/login" do %>
				<%= label_tag 		:email %>
				<%= text_field_tag(name = :email, value = @email_cadastro) 	 %>
				<%= label_tag 		:senha %>
				<%= password_field_tag :senha %>
				<%= label_tag  %>
				<%= submit_tag 		:logar %>
				<%  end %>
				
				<div class="cadastre-se">
				    <a class="btn btn-light" href="/gerente/novo">Cadastre-se</a>
			    </div>
             </div>
		 </div> 
    </header>
