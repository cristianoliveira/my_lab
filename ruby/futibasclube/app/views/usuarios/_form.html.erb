<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div class="msg_error">
      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label      :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label      :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label      :senha %><br>
    <%= f.text_field :senha %>
  </div>
  <div class="field">
    <%= f.label      "Confiramação" %><br>
    <%= f.text_field :senha_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
